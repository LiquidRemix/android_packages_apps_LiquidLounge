<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"           
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    
    <!-- Liquid Share -->
    <PreferenceScreen
        android:key="liquid_share"
        android:icon="@drawable/ic_share"
        android:title="@string/share_liquid_title"
        android:summary="@string/share_liquid_summary"
        settings:allowDividerAbove="false" />

    <!-- Liquid Source -->
    <PreferenceScreen
        android:key="liquid_source"
        android:icon="@drawable/ic_source"
        android:title="@string/liquid_source_title"
        android:summary="@string/liquid_source_summary"
        settings:allowDividerAbove="false" />

    <!-- Liquid Telegram -->
    <PreferenceScreen
        android:key="liquid_telegram"
        android:icon="@drawable/ic_telegram"
        android:title="@string/liquid_telegram_title"
        android:summary="@string/liquid_telegram_summary"
        settings:allowDividerAbove="false" />

    <!-- Liquid GooglePlus -->
    <PreferenceScreen
        android:key="liquid_google_plus"
        android:icon="@drawable/ic_gplus"
        android:title="@string/liquid_google_plus_title"
        android:summary="@string/liquid_google_plus_summary"
        settings:allowDividerAbove="false" /> 
     
     <!-- liquid Drill -->
    <PreferenceScreen
        android:key="liquid_drill"
        android:icon="@drawable/ic_drill"
        android:title="@string/drill_title"
        android:summary="@string/drill_summary"
        android:fragment="com.liquid.liquidlounge.fragments.about.Drill"
        settings:allowDividerAbove="false" />

    <!-- Liquid Maintainers -->
    <PreferenceScreen
        android:key="liquid_maintainers"
        android:icon="@drawable/ic_maintainers"
        android:title="@string/maintainers_liquid_title"
        android:summary="@string/maintainers_liquid_summary"
        android:fragment="com.liquid.liquidlounge.fragments.about.Maintainers"
        settings:allowDividerAbove="false" /> 
     
     <!-- Liquid Donate -->
    <PreferenceScreen
        android:key="liquid_donate"
        android:icon="@drawable/ic_donate"
        android:title="@string/donate_liquid_title"
        android:summary="@string/donate_liquid_summary"
        android:fragment="com.liquid.liquidlounge.fragments.about.Donate"
        settings:allowDividerAbove="false" /> 
     
       <!-- LIQUID OTA updates -->
     <Preference
        android:key="liquid_updates"
        android:icon="@drawable/ic_update"      
        android:title="@string/updates_liquid_title"
        android:summary="@string/updates_liquid_summary">
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.liquid.ota"
                android:targetClass="com.liquid.ota.MainActivity" />
          
     </Preference>
     </PreferenceScreen>
